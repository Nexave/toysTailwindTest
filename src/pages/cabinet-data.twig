{% extends 'layouts/main.twig' %}
{% block content %}
	<div class="main-container">
		<div class="tablet-catalog-button button inline-flex xl:hidden text-base md:text-lg px-8 py-2 md:py-3 mb-0 md:mb-2 w-full">
			<img src="img/icons/category-icon.svg" alt="" class="me-2 md:me-3 w-6 md:w-8 h-6 md:h-8 shrink-0">Каталог
																																																																																																														                    товарів
		</div>
	</div>
	<div class="pt-2 ipad:pt-[14px] pb-[10px]">
		<div class="main-container">
			<div class="flex items-center ipad:hidden ">
				<div class="mt-6 md:mt-0 mb-4 text-xl md:text-2xl">Мої особисті дані</div>
			</div>
			<div class="rounded-2xl flex w-[calc(100%+40px)] md:w-[calc(100%+80px)] xl:w-full -ms-5 md:-ms-10 xl:-ms-0 -me-5 md:-me-10  xl:-me-0 ipad:border ipad:borrder-gray-300 bg-white ipad:shadow-[4px_4px_15px_0_rgba(46,46,46,.1);] overflow-hidden">
				<div class="w-[300px] shrink-0 hidden ipad:block">
					<ul class="p-6 border-b border-b-gray-300">
						<li class="mb-[6px]">
							<a href="" class="py-2 px-5 flex items-center rounded-lg duration-300 ease-in-out hover:bg-violet-100 bg-violet-100"><img src="./img/icons/cabinet-user.svg" alt="" class="w-8 h-auto shrink-0 me-1">Мої
																																                                особисті дані</a>
						</li>
						<li class="mb-[6px]">
							<a href="" class="py-2 px-5 flex items-center rounded-lg duration-300 ease-in-out hover:bg-violet-100"><img src="./img/icons/cabinet-order.svg" alt="" class="w-8 h-auto shrink-0 me-1">Мої
																																                                замовлення</a>
						</li>
						<li class="mb-[6px] ">
							<a href="" class="py-2 px-5 flex items-center rounded-lg duration-300 ease-in-out hover:bg-violet-100  "><img src="./img/icons/cabinet-heart.svg" alt="" class="w-8 h-auto shrink-0 me-1">Список бажань</a>
						</li>
						<li class="cabinet-menu-item">
							<a href="" class="py-2 px-5 flex items-center rounded-lg duration-300 ease-in-out hover:bg-violet-100"><img src="./img/icons/cabinet-review.svg" alt="" class="w-8 h-auto shrink-0 me-1">Мої
																																                                відгуки</a>
						</li>
					</ul>
					<a href="" class="inline-block mt-4 ms-11 mb-7">Вийти з акаунту</a>
				</div>
				<div class="ipad:border-s ipad:border-s-gray-300 w-full">

					<div class="border ipad:border-none border-gray-300  shadow-[4px_4px_15px_0_rgba(46,46,46,.1)] rounded-2xl ipad:rounded-none bg-white py-4  px-5 ipad:px-10">
						<form class=" cabinet-data-form w-full mb-8">
							<div class="text-xl md:text-2xl xl:text-[32px] mb-2 md:mb-4 xl:mb-8 font-medium">Особисті дані</div>
							<div class="grid lg:grid-cols-3 gap-5 mb-4">
								<div class="column flex flex-col gap-6">
									<div class="input-wrapper">
										<label for="" class="text-sm md:text-base mb-2 text-gray-400 block">Прізвище*</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="Маринчук" readonly="true">
									</div>
									<div class="input-wrapper">
										<label for="" class="text-sm md:text-base mb-2 text-gray-400 block">Ваш телефон*</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="+380 (__) ___-__-__" readonly="true">
									</div>
								</div>
								<div class="column flex flex-col gap-6">
									<div class="input-wrapper">
										<label for="" class="text-sm md:text-base mb-2 text-gray-400 block">Ім'я*</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="Вікторія" readonly="true">
									</div>
									<div class="input-wrapper">
										<label for="" class="text-sm md:text-base mb-2 text-gray-400 block">Електронна пошта*</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="viktoria@gmail.com" readonly="true">
									</div>

								</div>
								<div class="column flex flex-col gap-6">
									<div class="input-wrapper">
										<label for="" class="text-sm md:text-base mb-2 text-gray-400 block">Дата народження*</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="10.09.1989" readonly="true">
									</div>
								</div>
							</div>
							<div class="buttons-block">
								<div class="button button-green button-edit text-base md:text-lg px-8 py-2 md:py-3">Редагувати</div>
								<div class="button-wrapper">
									<div class="button button-green text-base md:text-lg px-8 py-2 md:py-3">Зберегти</div>
									<div class="button-cancel text-lg ms-4 text-teal-500 hover:underline">Скасувати</div>
								</div>
							</div>
						</form>
						<form class="cabinet-data-form  w-full mb-8">
							<div class="text-xl md:text-2xl xl:text-[32px] mb-2 md:mb-4 xl:mb-8 font-medium">Адреса доставки</div>
							<div class="row ">
								<div class="input-wrapper">
									<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block">Адреса доставки (за замовчуванням)*</label>
									<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="Дніпро, вул. Шевчека, буд. 8, кв. 120" readonly="true">
								</div>
							</div>
							<div class="address-row flex flex-col md:flex-row gap-5 mb-4">
								<div class="input-row flex flex-col gap-5 ipad:flex-row w-full md:w-[calc(100%-(100%-40px)/3)]">
									<div class="input-wrapper w-full">
										<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block">Місто*</label>
										<input type="text " class="input  text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="Дніпро" readonly="true">
									</div>
									<div class="input-wrapper w-full">
										<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block">Вулиця</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="вулиця Шевченка" readonly="true">
									</div>
								</div>
								<div class="input-row flex flex-col gap-5 ipad:flex-row w-1/3 md:w-auto">
									<div class="input-wrapper input-wrapper-small">
										<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block"> Будинок*</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="8" readonly="true">
									</div>
									<div class="input-wrapper input-wrapper-small">
										<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block">Квартира</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="120" readonly="true">
									</div>
								</div>

							</div>
							<div class="buttons-block">
								<div class="button button-green button-edit text-base md:text-lg px-8 py-2 md:py-3">Редагувати</div>
								<div class="button-wrapper">
									<div class="button button-green text-base md:text-lg px-8 py-2 md:py-3">Зберегти</div>
									<div class="button-cancel text-lg ms-4 text-teal-500 hover:underline">Скасувати</div>
								</div>
							</div>
						</form>
						<form class="cabinet-data-form  w-full mb-8">
							<div class="text-xl md:text-2xl xl:text-[32px] mb-2 md:mb-4 xl:mb-8 font-medium">Логін та пароль</div>
							<div class="row mb-4">
								<div class="column column-medium">
									<div class="input-wrapper">
										<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block">Логін</label>
										<input type="text" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="viktoria@gmail.com" readonly="true">
									</div>
								</div>
								<div class="column column-medium">

									<div class="input-wrapper password relative">
										<div class="toggle-password w-8 h-8 absolute top-9 right-3 cursor-pointer">
											<img src="img/icons/eye-icon.svg" alt="" class="icon-show">
											<img src="img/icons/eye-off-icon.svg" alt="" class="icon-hide">
										</div>
										<label for=""  class="text-sm md:text-base mb-2 text-gray-400 block">Пароль</label>
										<input type="password" class="input text-base md:text-lg w-full rounded-[6px] py-[10px] md:py-4 px-3" placeholder="*********" readonly="true">
									</div>

								</div>

							</div>
							<div class="buttons-block">
								<div class="button button-green button-edit text-base md:text-lg px-8 py-2 md:py-3">Редагувати</div>
								<div class="button-wrapper">
									<div class="button button-green text-base md:text-lg px-8 py-2 md:py-3">Зберегти</div>
									<div class="button-cancel text-lg ms-4 text-teal-500 hover:underline">Скасувати</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
